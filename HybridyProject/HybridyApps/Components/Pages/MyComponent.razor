@page "/MyComponent"
@page "/MyComponent/{Id:int}"

@using HybridyApps.MyServices
@using WebDomain

<h3>MyComponent</h3>

<EditForm Model="@MyClass" OnValidSubmit="HandleSubmit">
    <h3 class="text-center"> My Class </h3>
    <div class="card dataForm ">
        <div class="row m-3 ">
            <div class="col-md-4 mb-3">
                <label>House Number</label>
                <InputText @bind-Value="MyClass.Name" class="form-control"></InputText>
            </div>
            <div class="col-md-4 mb-3">
                <label>Description</label>
                <InputText @bind-Value="MyClass.Description" class="form-control"></InputText>
            </div>

            <br />
            <div>
                <button type="submit" class="btn btn-primary m-2">Save</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int? Id { get; set; }

    [Inject]
    private IMyHybridClassServices Services{ get; set; }

    [Inject]
    private NavigationManager _navigationManager { get; set; }

    public MyClass MyClass = new MyClass();

    protected override async Task OnInitializedAsync()
    {
        if (Id.Value > 0)
        {
            MyClass = await Services.GetMyClass(Id.Value);
        }
        else
        {
            MyClass = new MyClass();
        }
    }

    public async Task HandleSubmit()
    {
        if (Id.Value > 0)
        {
            await Services.UpdateMyClass(MyClass);
        }
        else
        {
            await Services.CreateMyClass(MyClass);
        }

        _navigationManager.NavigateTo("/weather");
    }
}